<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.batchmates.android.vectordrawable.view.activities.mainactivity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="The Amazing Changing Dancing Image!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivVectorImage"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="changeButton"
        android:text="Change Me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="danceButton"
        android:text="watch the image dance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="spinBaby"
        android:text="Spin Baby Spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="likeDancing"
        android:text="Do you like the Dancing buttong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
